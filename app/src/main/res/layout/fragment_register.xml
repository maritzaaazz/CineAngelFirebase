<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authenticate.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/layout_rounded"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivWp1"
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/a1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="310dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Register"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#F5F5F5"
                    android:drawableLeft="@drawable/baseline_people_24"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Username"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#555555"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="440dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#F5F5F5"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Email"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#555555"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#F5F5F5"
                    android:drawableLeft="@drawable/baseline_password_24"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#555555"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="560dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded"
                    android:inputType="phone"
                    android:backgroundTint="#F5F5F5"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:drawablePadding="25dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Phone"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#555555"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/isTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_below="@id/etPhone"
                    android:text="By checking the box you agree to our Terms and Conditions."
                    android:textColor="@color/blue"
                    android:textSize="9.5sp"
                    android:fontFamily="@font/poppins_medium"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerBtn"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="655dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/blue"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Register"
                    android:textColor="@color/yellow"
                    android:textSize="17sp"
                    app:cornerRadius="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="700dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Already Have an Account?"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/blue"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tvLogin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="700dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="  Log In"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
</FrameLayout>